#include <iostream> 
int main() {
    char ch;
    // Loop to take 5 character inputs from the user
    for (int i = 1; i <= 5; i++) {
        std::cout << "Enter a character: ";
        std::cin >> ch;  // Take input from the user

        // If user enters 'n', loop will exit immediately
        if (ch == 'n') {
            std::cout << "Exiting loop as 'n' was entered." << std::endl;
            break;
        }
    }
    return 0;
}
